{
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": ["DOM", "ES2020"],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "moduleResolution": "node",
        "sourceMap": false,
        // "baseUrl": ".",
        // "paths": {
        //     "@utils/*": ["src/utils/*"],
        //     "@types/*": ["src/types/*"],
        //     "@interfaces/*": ["src/interfaces/*"],
        // }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "tests"]
}